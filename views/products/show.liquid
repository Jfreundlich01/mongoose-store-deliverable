{% layout "layout.liquid" %} {% block content %}
      <div>
        <article>
          <h2>
            {{ product.name }} 
            
          </h2>
          <div class="desc-container">
          <h3>{{product.description }}</h3>
          <h4>Price: ${{product.price}}</h4>
          {% if product.qty == 0 %}
            <h6 class="out-of-stock">Product is OUT OF STOCK</h6>
        {% else %}
            <h6>QUANTITY: {{product.qty}}</h6>
            <form action="/store/{{product._id}}/buy?_method=PUT" method="POST">
                <input type="submit" value="Buy">
            </form>
        {% endif %}
        </div>
        <div class="button-cont">
            <a href="/store"> Back</a>
            <a href="/store/{{product._id}}/edit"><button>Edit</button></a>
            <form action="/store/{{ product._id }}?_method=DELETE" method="POST">
                <input type="submit" value= "Delete">
            </form>
        </div>

        </article>
      </div>
{% endblock %}
